# The name of the bundle. run `databricks bundle schema` to see the full bundle settings schema.
bundle:
  name: {{template `project_name` .}}


variables:
  experiment_name:
    description: Experiment name for the model training.
    default: /Users/${workspace.current_user.userName}/${bundle.target}-{{template `experiment_base_name` .}}
  model_name:
    description: Model name for the model training.
    default: ${bundle.target}-{{template `model_name` .}}


include:
  # Resources folder contains ML artifact resources for the ml project that defines model and experiment
  # And workflows resources for the ml project including model training -> validation -> deployment, 
  # feature engineerng, batch inference, data monitoring, metric refresh, alerts and triggering retraining
  - ./resources/*

# Deployment Target specific values for workspace
targets:
  dev:
    default: true
    mode: development
    workspace:
      # TODO: add dev workspace URL
      host:

  staging:
    workspace:
      host: {{template `databricks_staging_workspace_host` .}}

  prod:
    mode: production
    workspace:
      host: {{template `databricks_prod_workspace_host` .}}

  test:
    workspace:
      host: {{template `databricks_staging_workspace_host` .}}

